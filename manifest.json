{
  "manifest_version": 3,
  "name": "Surveillance Warning",
  "version": "1.0",

  "permissions": ["storage"],

  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/",
        "https://copilot.microsoft.com/"
      ],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["warning.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
