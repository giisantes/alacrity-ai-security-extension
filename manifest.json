{
  "manifest_version": 3,
  "name": "Ai Guard",
  "version": "1.0",
  "description": "Protecting users from using unsafe AI tools.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "scripting",
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],  "content_scripts": [
    {
      "matches": [
 "*://chatgpt.com/*",
 "*://copilot.microsoft.com/*",
 "*://gemini.google.com/*",
 "*://deepseek.com/*",
 "*://chat.deepseek.com/*",
 "*://openai.com/*",
 "*://claude.ai/*",
 "*://perplexity.ai/*",
 "*://mistral.ai/*",
 "*://grok.com/*",
 "*://x.ai/*"
      ],
      "js": ["scripts/content.js"],
      "css": ["style.css"]
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["warning.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
